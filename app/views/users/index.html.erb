<div class="row">
  <div class="col-md-6">
    <ul class="list-unstyled">
      <% @user.each do |user| %>
        <% if user.profile %>
          <li>
            <div class="well row <%= cycle('white-bg', '') %>">
              <div class="col-sm-4 text-center avatar">
                <% if user.profile.avatar.attached? %>
                  <%= link_to user do %>
                    <%= image_tag user.profile.avatar %>
                  <% end %>
                <% else %>
                  <%= link_to user do %>
                    <img src="https://via.placeholder.com/100">
                  <% end %>
                <% end %>
              </div>

              <div>
                <%= link_to user do %>
                  <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                <% end %>
                <p>
                  <%= user.profile.profile_type %> 
                  <% if user.plan_id == 2 %>
                    <span class="label label-danger">PRO</span>
                  <% end %>
                </p>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-6">
    <div class="well">
      <h2>Listen and Vote</h2>
    </div>
  </div>

  <div class="col-md-6">
    <div class="well">
      <h2>Comments</h2>
    </div>
  </div>
</div>
