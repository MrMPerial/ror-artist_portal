<div class="row">

  <% if @user.profile %>
    
    <% if @user.profile.avatar.attached? %>
      
      <div class="col-md-3 text-center avatar">
        
        <%= image_tag @user.profile.avatar %>
      
      </div>
    
    <% else %>
      
      <div class="col-md-3 text-center">
        <img src="https://via.placeholder.com/150">
      </div>
    
    <% end %>

    <div class="col-md-6">
      
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      
      <h3><%= profile_type_icon %> <%= @user.profile.profile_type %></h3>
      
      <div class="well profile-block profile-description">
        <h3>Description</h3>
        
        <%= @user.profile.description %>
      
      </div>

      <% if current_user.plan_id == 2 %>
    
        <div class="well profile-block contact-info">
          <h3>Contact Info</h3>
    
          <%= @user.profile.phone_number %><br/>
          <%= @user.profile.contact_email %><br/>
    
        </div>
    
      <% end %>
    
    </div>
  
  <% else %>
  
    <h3>There is currently no profile set up.</h3>
  
    <%= link_to "Create Profile",
      new_user_profile_path(current_user) %>
  
  <% end %>

</div>
